<div class="hero-container position-relative text-center text-white">
    <!-- Hero background -->
    <div class="hero">
        <img src="/heroImg.png"
             class="img-fluid w-100" 
             style="height: 85vh; object-fit: cover;" />

        <!-- Dark overlay -->
        <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>

    </div>


    <!-- Login form + heading -->
    <div class="position-absolute top-50 start-50 translate-middle w-100 text-center" style="max-width: 60vh;">

        <!-- Text above card -->
        <h1 class="mb-4 text-white fw-bold">Omegapoint Customer Portal</h1>

        <!-- Login card -->
        <div class="card shadow-lg border-0 rounded-1">
            <div class="card-body p-4">
                <form>
                    <!-- Email -->
                    <div class="mb-3 text-start">
                        <label for="email" class="form-label fw-semibold">Email address</label>
                        <input type="email" class="form-control" id="email" placeholder="user@email.com" />
                    </div>

                    <!-- Password -->
                    <div class="mb-4 text-start">
                        <label for="password" class="form-label fw-semibold">Password</label>
                        <input type="password" class="form-control" id="password" placeholder="••••••••••" />
                    </div>

                    <!-- Submit -->
                    <a href="/landing" type="submit" class="btn btn-dark w-30 rounded-pill">
                        Log in
                    </a>
                </form>
            </div>
        </div>
    </div>

</div>
